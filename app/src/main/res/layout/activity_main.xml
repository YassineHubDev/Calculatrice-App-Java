<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calculatrice"
        android:textAlignment="gravity"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <EditText
        android:id="@+id/editView"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:focusable="false"
        android:clickable="false"
        android:cursorVisible="false"
        android:gravity="right"
        android:textAlignment="gravity"
        android:maxLength="10"
        android:textColor="@android:color/holo_blue_light"
        android:textStyle="bold" />

    <Button
        android:id="@+id/bouton7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="150dp"
        android:text="7" />

    <Button
        android:id="@+id/bouton8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8"
        android:layout_alignTop="@+id/bouton7"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/bouton7"
        />

    <Button
        android:id="@+id/bouton9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:layout_alignTop="@+id/bouton8"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/bouton8"
        />

    <Button
        android:id="@+id/boutonPlus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:layout_alignTop="@+id/bouton9"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/bouton9"
        />

    <Button
        android:id="@+id/bouton4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:layout_alignLeft="@+id/bouton7"
        android:layout_alignTop="@+id/bouton7"
        android:layout_marginTop="50dp"

        />

    <Button
        android:id="@+id/bouton5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:layout_alignTop="@+id/bouton4"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/bouton4"
        />

    <Button
        android:id="@+id/bouton6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"
        android:layout_alignTop="@+id/bouton5"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/bouton5"
        />

    <Button
        android:id="@+id/boutonMoins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:layout_alignTop="@+id/bouton6"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/bouton6"
        />


    <Button
        android:id="@+id/bouton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:layout_alignLeft="@+id/bouton4"
        android:layout_alignTop="@+id/bouton4"
        android:layout_marginTop="50dp"
        />

    <Button
        android:id="@+id/bouton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:layout_alignTop="@+id/bouton1"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/bouton1"
        />

    <Button
        android:id="@+id/bouton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:layout_alignTop="@+id/bouton2"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/bouton2"
        />

    <Button
        android:id="@+id/boutonMultiplier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*"
        android:layout_alignTop="@+id/bouton3"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/bouton3"
        />


    <Button
        android:id="@+id/boutonVirgule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=","
        android:layout_alignLeft="@+id/bouton1"
        android:layout_alignTop="@+id/bouton1"
        android:layout_marginTop="50dp"
        />


    <Button
        android:id="@+id/bouton0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:layout_alignTop="@+id/boutonVirgule"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/boutonVirgule"
        />

    <Button
        android:id="@+id/boutonC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="C"
        android:layout_alignTop="@+id/bouton0"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/bouton0"
        />

    <Button
        android:id="@+id/boutonDiviser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/"
        android:layout_alignTop="@+id/boutonC"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/boutonC"
        />

    <Button
        android:id="@+id/boutonEgal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="="
        android:layout_alignLeft="@+id/boutonDiviser"
        android:layout_alignTop="@+id/boutonDiviser"
        android:layout_marginTop="50dp"
        />

    <Button
        android:id="@+id/boutonCE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CE"
        android:layout_alignLeft="@+id/boutonC"
        android:layout_alignTop="@+id/boutonC"
        android:layout_marginTop="50dp"
        />

    <TextView
        android:id="@+id/textTitre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="Dernière opération effectuée :"
        android:textAlignment="gravity"
        android:textSize="20sp"
        android:layout_marginTop="460dp"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/textValue1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="Valeur 1 = "
        android:textAlignment="gravity"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="500dp"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/textValue2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="Valeur 2 = "
        android:textAlignment="gravity"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_alignLeft="@+id/textValue1"
        android:layout_alignTop="@+id/textValue1"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/textOperateur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="Opérateur = "
        android:textAlignment="gravity"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_alignLeft="@+id/textValue2"
        android:layout_alignTop="@+id/textValue2"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/textResultat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="Résultat = "
        android:textAlignment="gravity"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_alignLeft="@+id/textOperateur"
        android:layout_alignTop="@+id/textOperateur"
        android:layout_marginTop="30dp"/>



</RelativeLayout>